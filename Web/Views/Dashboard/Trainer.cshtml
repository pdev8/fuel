
@{
    ViewBag.Title = "Trainer";
}

<div class="container">
    <div class="row" ng-controller="trainerController as tc">
        <div class="panel panel-default col-md-6">
            <form>
                <div class="form-group">
                    <label for="userFirstName">Enter your first name</label>
                    <input type="text" class="form-control" id="userFirstName" aria-describedby="emailHelp" placeholder="First Name" ng-model="tc.userProfileModel.firstName">
                </div>
                <div class="form-group">
                    <label for="userLastName">Enter your last name</label>
                    <input type="text" class="form-control" id="userLastName" placeholder="Last Name" ng-model="tc.userProfileModel.lastName">
                </div>
                <div class="form-group">
                    <label for="userEmailAddress">Enter a email</label>
                    <input type="email" class="form-control" id="userEmailAddress" aria-describedby="emailHelp" placeholder="Email" ng-model="tc.userProfileModel.email">
                    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                </div>
                <div class="form-group">
                    <label>Role</label>
                    <select class="form-control" ng-model="tc.userProfileModel.userRoleId" ng-options="role.Id as role.RoleType for role in tc.userRoles"></select>
                </div>
                <div class="form-group">
                    <label>Bio</label>
                    <textarea class="form-control" ng-model="tc.trainerModel.bio"></textarea>
                </div>
                <button type="button" class="btn btn-primary" ng-click="tc.postTrainer()">Post</button>
                <button type="button" class="btn btn-primary">Get All</button>
                <button type="button" class="btn btn-primary">Get By Id</button>
                <button type="button" class="btn btn-primary">Update</button>
            </form>
        </div>
        <div class="panel panel-default col-md-6">
            <div ng-cloak>
                <div class="panel-heading">
                    <p>Name: {{tc.userProfileModel.firstName}} {{tc.userProfileModel.lastName}}</p>
                    <p>Email: {{tc.userProfileModel.email}}</p>
                </div>
                <div>
                    <button type="button" class="btn btn-danger btn-sm">Update</button>
                    <button type="button" class="btn btn-danger btn-sm">Delete</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/app/app.js"></script>

    @* Controllers *@
    <script src="~/Scripts/Controllers/UserRoleController.js"></script>
    <script src="~/Scripts/Controllers/TrainerController.js"></script>

    @* Services *@
    <script src="~/Services/UserRoleService.js"></script>
    <script src="~/Services/TrainerService.js"></script>
}




